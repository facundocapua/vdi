---
interface Props {
  id: string;
  title: string;
  excerpt: string;
  image: string;
  date: string;
}

const { id, title, excerpt, image, date } = Astro.props;

// Formato de fecha
const formattedDate = new Date(date).toLocaleDateString('es-ES', {
  year: 'numeric',
  month: 'long',
  day: 'numeric'
});
---

<article class="bg-white rounded-xl overflow-hidden shadow-md hover:shadow-lg transition-shadow duration-300">
  <a href={`/novedades/${id}`} class="block">
    <div class="h-48 overflow-hidden">
      <img 
        src={image} 
        alt={title}
        class="w-full h-full object-cover hover:scale-105 transition-transform duration-500"
      />
    </div>
    <div class="p-6">
      <p class="text-sm text-gray-500 mb-2">{formattedDate}</p>
      <h3 class="font-subheading text-xl text-primary-700 mb-3 hover:text-primary-500 transition-colors">{title}</h3>
      <p class="text-gray-600 line-clamp-3">{excerpt}</p>
      <div class="mt-4">
        <span class="text-primary-500 font-subheading hover:underline">Leer más →</span>
      </div>
    </div>
  </a>
</article>
