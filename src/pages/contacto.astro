---
import Layout from '../layouts/Layout.astro';
import InstagramLogo from '../components/assets/instagram.svg';
import WhatsAppLogo from '../components/assets/whatsapp.svg';
---

<Layout>
  <section class="bg-white py-16 sm:py-24">
    <div class="mx-auto max-w-7xl px-6 lg:px-8">
      <div class="mx-auto max-w-2xl lg:max-w-none">
        <div class="text-center mb-12">
          <h1 class="text-balance text-4xl font-semibold tracking-tight text-primary-600 sm:text-5xl font-heading">Contacto</h1>
          <p class="mt-6 text-lg leading-8 text-gray-600 max-w-3xl mx-auto font-subheading">
            Estamos a tu disposición para responder tus consultas
          </p>
        </div>
        
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center mb-16">
          <div class="rounded-xl overflow-hidden shadow-md">
            <!-- Mapa de ubicación -->
            <iframe 
              src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3173.3850625855905!2d-59.13794512392867!3d-37.32634647221633!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x95911f9c65edf29b%3A0xb85edf8c7e8520db!2sTandil%2C%20Provincia%20de%20Buenos%20Aires!5e0!3m2!1ses!2sar!4v1716311045!5m2!1ses!2sar" 
              width="100%" 
              height="450" 
              style="border:0;" 
              allowfullscreen="" 
              loading="lazy" 
              referrerpolicy="no-referrer-when-downgrade">
            </iframe>
          </div>
          <div class="space-y-8 flex flex-col justify-between">
            <h2 class="text-3xl font-semibold text-gray-800 font-subheading border-b border-primary-200 pb-2">Nuestros Datos</h2>
            
            <div class="flex flex-col justify-between grow">
              <!-- Teléfono -->
              <div class="flex items-center gap-4">
                <div class="bg-primary-100 p-3 rounded-full">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-primary-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                  </svg>
                </div>
                <div>
                  <h3 class="text-lg font-medium text-gray-900 font-subheading">Teléfono</h3>
                  <a href="tel:+5492494285894" class="text-primary-600 hover:text-primary-700 font-medium">+54 249 428-5894</a>
                </div>
              </div>
              
              <!-- Email -->
              <div class="flex items-center gap-4">
                <div class="bg-primary-100 p-3 rounded-full">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-primary-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                  </svg>
                </div>
                <div>
                  <h3 class="text-lg font-medium text-gray-900 font-subheading">Email</h3>
                  <a href="mailto:info@vanguardiadi.com" class="text-primary-600 hover:text-primary-700 font-medium">info@vanguardiadi.com</a>
                </div>
              </div>
              
              <!-- WhatsApp -->
              <div class="flex items-center gap-4">
                <div class="bg-primary-100 p-3 rounded-full">
                  <WhatsAppLogo width={20} class="text-primary-600" />
                </div>
                <div>
                  <h3 class="text-lg font-medium text-gray-900 font-subheading">WhatsApp</h3>
                  <a href="https://wa.me/5492494285894" target="_blank" rel="noopener noreferrer" class="text-primary-600 hover:text-primary-700 font-medium">+54 249 428-5894</a>
                </div>
              </div>
              
              <!-- Instagram -->
              <div class="flex items-center gap-4">
                <div class="bg-primary-100 p-3 rounded-full">
                  <InstagramLogo width={20} height={20} class="text-primary-600" />
                </div>
                <div>
                  <h3 class="text-lg font-medium text-gray-900 font-subheading">Instagram</h3>
                  <a href="https://www.instagram.com/vanguardiadesarrollosinmob/" target="_blank" rel="noopener noreferrer" class="text-primary-600 hover:text-primary-700 font-medium">@vanguardiadesarrollosinmob</a>
                </div>
              </div>
            </div>
            
            <div class="pt-4">
              <h2 class="text-3xl font-semibold text-gray-800 font-subheading border-b border-primary-200 pb-2 mb-4">Horario de atención</h2>
              <p class="text-gray-600 font-subheading">
                Lunes a Viernes: 9:00 - 18:00<br>
                Sábados: 9:00 - 13:00
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>